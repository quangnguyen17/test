{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "jsx": "react",
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "api": [
                "src/api"
            ],
            "components": [
                "src/components"
            ],
            "hooks": [
                "src/hooks"
            ],
            "public": [
                "public"
            ],
            "test-utils": [
                "test"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}